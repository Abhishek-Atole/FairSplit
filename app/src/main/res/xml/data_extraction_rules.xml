<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="FirebaseAuth"/>
        <exclude domain="database" path="."/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Allow device-to-device transfer but exclude auth tokens -->
        <exclude domain="sharedpref" path="FirebaseAuth"/>
    </device-transfer>
</data-extraction-rules>
